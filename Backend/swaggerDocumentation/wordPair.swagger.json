{
    "openapi": "3.0.1",
    "info": {
        "title": "Word Pair API",
        "version": "1.0.0"
    },
    "servers": [
        {
        "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/wordPair/showWordPairsByListId/{id}": {
            "get": {
              "tags": ["Word Pairs"],
              "summary": "Get all word pairs by list ID",
              "description": "Retrieve all word pairs from the chosen list",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  },
                  "description": "ID of the word list",
                  "example": "1707153247759"
                }
              ],
              "responses": {
                "200": {
                  "description": "All word pairs were found successfully",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/WordPairListResponse"
                      },
                      "example": {
                        "success": true,
                        "resultList": [
                          {
                            "id": "1711463501019",
                            "fromWord": "hello",
                            "toWord": "привіт",
                            "wordsListId": "1707153247759"
                          }
                        ]
                      }
                    }
                  }
                },
                "400": {
                  "description": "Invalid ID supplied",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/UnsuccessfullResponse"
                      },
                      "example": {
                        "success": false,
                        "message": "Invalid Word list ID"
                      }
                    }
                  }
                },
                "500": {
                  "description": "Internal server error",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/UnsuccessfullResponse"
                      },
                      "example": {
                        "success": false,
                        "message": "Internal server error"
                      }
                    }
                  }
                }
              }
            }
        },
        "/wordPair/addWordPair": {
        "post": {
            "tags": ["Word Pairs"],
            "summary": "Add a new word pair",
            "description": "Add a new word pair to a chosen words list",
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "$ref": "#/components/schemas/AddWordPairRequest"
                },
                "example": {
                    "fromWord": "hello",
                    "toWord": "привіт",
                    "wordsListId": "1707153247759"
                }
                }
            }
            },
            "responses": {
            "200": {
                "description": "Word pair added successfully",
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/AddWordPairResponse"
                    },
                    "example": {
                    "success": true,
                    "wordsPairId": "1711463501019"
                    }
                }
                }
            },
            "400": {
                "description": "Invalid input was entered",
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/UnsuccessfullResponse"
                    },
                    "example": {
                    "success": false,
                    "message": "List with such id does not exist"
                    }
                }
                }
            },
            "500": {
                "description": "Internal server error",
                "content": {
                    "application/json": {
                        "schema": {
                        "$ref": "#/components/schemas/UnsuccessfullResponse"
                        },
                        "example": {
                        "success": false,
                        "message": "Internal server error"
                        }
                    }
                }
            }
            }
        }
        },
        "/wordPair/removeWordPair": {
        "delete": {
            "tags": ["Word Pairs"],
            "summary": "Remove a word pair",
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "$ref": "#/components/schemas/RemoveWordPairRequest"
                },
                "example":{
                    "pairId": "1711463501019"
                }
                }
            }
            },
            "responses": {
            "200": {
                "description": "Word pair removed successfully",
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/RemoveWordPairResponse"
                    },
                    "example": {
                    "success": true,
                    "wordsPairId": "1711463501019"
                    }
                }
                }
            },
            "400": {
                "description": "Invalid input was entered",
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/UnsuccessfullResponse"
                    },
                    "example": {
                    "success": false,
                    "message": "Cannot find word pair with such id"
                    }
                }
                }
            },
            "500": {
                "description": "Internal server error",
                "content": {
                    "application/json": {
                        "schema": {
                        "$ref": "#/components/schemas/UnsuccessfullResponse"
                        },
                        "example": {
                        "success": false,
                        "message": "Internal server error"
                        }
                    }
                    }
            }
            }
        }
        },
        "/wordPair/translateWord": {
            "post": {
            "tags": ["Word Pairs"],
            "summary": "Translate a word",
            "description": "Translate a word from a chosen language to the other chosen language using DeepLTranslator API",
            "requestBody": {
                "required": true,
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/TranslateWordRequest"
                    },
                    "example": {
                        "toLanguage": "en-GB",
                        "fromLanguage": "uk",
                        "wordToTranslate": "чотири"
                    }
                }
                }
            },
            "responses": {
                "200": {
                "description": "Translation successful",
                "content": {
                    "application/json": {
                    "schema": {
                        "$ref": "#/components/schemas/TranslateWordResponse"
                    },
                    "example": {
                        "success": true,
                        "wordsPair": {
                            "fromWord": "чотири",
                            "toWord": "four"
                        }
                    }
                    }
                }
                },
                "500": {
                    "description": "Internal server error",
                    "content": {
                        "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/UnsuccessfullResponse"
                        },
                        "example": {
                            "success": false,
                            "message": "Exception occured while translating the word"
                        }
                        }
                    }
                }
            }
            }
        }
        },
        "components": {
          "schemas": {
            "UnsuccessfullResponse":{
                "type":"object",
                "properties":{
                    "success": {
                        "type": "boolean"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "WordPairListResponse": {
              "type":"object",
              "properties":{
                "success": {
                    "type": "boolean"
                },
                "resultList": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/WordPair"
                    }
                }
              }
            },
            "WordPair": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "fromWord": {
                  "type": "string"
                },
                "toWord": {
                  "type": "string"
                },
                "wordsListId": {
                  "type": "string"
                }
              }
            },
            "AddWordPairRequest": {
              "type": "object",
              "properties": {
                "fromWord": {
                  "type": "string"
                },
                "toWord": {
                  "type": "string"
                },
                "wordsListId": {
                  "type": "string"
                }
              },
              "required": ["fromWord", "toWord", "wordsListId"]
            },
            "AddWordPairResponse": {
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "wordsPairId": {
                    "type": "string"
                  }
                },
                "required": ["success", "wordsPairId"]
              },
            "RemoveWordPairRequest": {
              "type": "object",
              "properties": {
                "pairId": {
                  "type": "string"
                }
              },
              "required": ["pairId"]
            },
            "RemoveWordPairResponse": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "wordsPairId": {
                    "type": "string"
                  }
                },
                "required": ["success", "wordsPairId"]
              },
            "TranslateWordRequest": {
              "type": "object",
              "properties": {
                "toLanguage":{
                    "type": "string"
                },
                "fromLanguage":{
                    "type": "string"
                },
                "wordToTranslate": {
                  "type": "string"
                }
              },
              "required": ["toLanguage", "fromLanguage", "wordToTranslate"]
            },
            "TranslateWordResponse": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "wordsPair": {
                    "type": "object",
                    "properties": {
                        "fromWord": {
                            "type": "string"
                          },
                          "toWord": {
                            "type": "string"
                          }
                    }
                  }
                },
                "required": ["success", "wordsPair"]
            }
        }
        }
}